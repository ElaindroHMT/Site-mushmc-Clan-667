  <script>
    // üîí Webhook s√≥ no c√≥digo (n√£o aparece no HTML)
    const WEBHOOK_URL = "https://discord.com/api/webhooks/1419636662866284595/lzkTa-HjIxIgaxCAbiJkluKyUR7LDhUcp_wGh8PouBKnKyJr3q2akH8SYcSafvW44GBr";

    const form = document.getElementById('form');
    const statusEl = document.getElementById('status');
    const btn = document.getElementById('submit');

    function getCheckedValues(name) {
      return Array.from(document.querySelectorAll(`input[name="${name}"]:checked`)).map(i => i.value);
    }

    form.addEventListener('submit', async e => {
      e.preventDefault();
      btn.disabled = true;
      statusEl.textContent = "‚è≥ Enviando please...";

      const payload = {
        nomeDiscord: document.getElementById('discordNome').value,
        banido: document.querySelector('input[name="banido"]:checked')?.value || "N√£o informado",
        genero: document.querySelector('input[name="genero"]:checked')?.value || "N√£o informado",
        idade: document.getElementById('idade').value || "N√£o informado",
        outroClan: document.getElementById('outroClan').value || "Nenhum",
        cxc: document.getElementById('cxc').value || "0",
        pontes: getCheckedValues('pontes').join(", ") || "Nenhuma",
        pontes_outra: document.getElementById('pontes_outra').value || "Nenhuma",
        tempo: document.getElementById('tempo').value || "N√£o informado",
        pirata: document.querySelector('input[name="pirata"]:checked')?.value || "N√£o informado",
        tags: getCheckedValues('tag').join(", ") || "Nenhuma",
        tag_outra: document.getElementById('tag_outra').value || "Nenhuma",
        nivel: document.querySelector('input[name="nivel"]:checked')?.value || "N√£o informado",
        horarios: document.getElementById('horarios').value || "N√£o informado"
      };

      const embed = {
        title: "üì• Nova inscri√ß√£o - Formul√°rio 667",
        color: 0x3b82f6,
        fields: Object.entries(payload).map(([k,v]) => ({
          name: k.charAt(0).toUpperCase() + k.slice(1),
          value: v.toString(),
          inline: false
        })),
        footer: { text: "Sistema de Logs - Clan 667" },
        timestamp: new Date()
      };

      try {
        const res = await fetch(WEBHOOK_URL, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ username: "Formul√°rio 667", embeds: [embed] })
        });

        if (res.ok) {
          statusEl.textContent = "‚úÖ Enviado com sucesso!";
          form.reset();
          statusEl.textContent = "‚ú®Formulario bem socedido"
        } else {
          statusEl.textContent = "‚ùå Erro ao enviar.";
          console.error(await res.text());
        }
      } catch(err) {
        statusEl.textContent = "‚ö†Ô∏è Falha de conex√£o.";
        console.error(err);
      } finally {
        btn.disabled = false;
      }
    });
  </script>
